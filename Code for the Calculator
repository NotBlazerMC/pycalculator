# "Friendly" Greeting
print('Imagine using a calculator. But anyways')

# Factorial Function
def factorial(num1):
    if num1 == 0 or num1 == 1:
        return 1
    else:
        return num1*factorial(num1-1)

# While loop for operations
while True:
    num1 = float(input('Enter a number: '))
    operation = input('Please choose your operation (Options: +, -, *, /, ^, sqrt, %): ')
    if operation == 'sqrt':
        print('')
    elif operation == '!':
        pass
    else:
        num2 = float(input("Enter another number: "))

# Addition
    if operation == '+':
        print(num1 + num2)
        
# Subtraction
    elif operation == '-':
        if num2 > num1:
            print('The second number is greater. Do you want the result to be negative? (yes/no): ')
            choice = input()
            if choice.lower() == 'yes':
                print(num1 - num2)
            else:
                print(num2 - num1)
        else:
            print(num1 - num2)

# Multiplication
    elif operation == '*':
        print(num1 * num2)
        
# Devision
    elif operation == '/':
        if num2 == 0:
            print('Division by 0 is currently undefined')
        else:
            print(num1 / num2)
            
# Percentage            
    elif operation == '%':
        if num2 == 0:
            print("You can't find the percentage out of 0 idiot.")
        else:
            percentage = num1 / num2 * 100
            print(print(f'{num1: .0f} is {percentage:.2f}% of {num2: .0f}'))
            
# Power Notation
    elif operation == '^':
        print(num1 ** num2)
        
# Square Root
    elif operation == 'sqrt':
        if num1 < 0:
            print("Can't find square root of negative numbers")
        else:
            print(num1 ** 0.5)
# Factorials
    elif operation == '!':
        if num1 < 0:
            print('Are you sure about that?')
        
        else:
            print(factorial(num1))
        
# Invalid Operation
    else:
        print('Invalid operation. Please choose a valid operation.')
